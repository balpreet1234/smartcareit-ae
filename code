    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fadeLeftElement = document.querySelector('.fade-left-element');

            function fadeLeftOnScroll() {
                const rect = fadeLeftElement.getBoundingClientRect();
                if (rect.top < window.innerHeight) {
                    fadeLeftElement.classList.add('fade-left');
                }
            }

            window.addEventListener('scroll', fadeLeftOnScroll);
            fadeLeftOnScroll(); // Run initially in case the element is already in view
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fadeRightElement = document.querySelector('.fade-right-element');

            function fadeRightOnScroll() {
                const rect = fadeRightElement.getBoundingClientRect();
                if (rect.top < window.innerHeight) {
                    fadeRightElement.classList.add('fade-right');
                }
            }

            window.addEventListener('scroll', fadeRightOnScroll);
            fadeRightOnScroll(); // Run initially in case the element is already in view
        });
    </script>
